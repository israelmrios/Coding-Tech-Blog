<div class="row">
  <div>
    <h2 class="welcome">Welcome, <strong>{{username}}</strong>!</h2>
  </div>
  <div>
    <a href="/newpost/"><i class="fas fa-plus fa-2x add-post"></i></a>
  </div>
</div>

<div>
  <h3>My Posts:</h3>
</div>

<!-- Using a Lookup Helper to render posts as an individual post -->
{{#each posts as |post|}}
<div class="posts-container">
  <div class="post-header">
    <h2><a href="/updatepost/{{post.id}}">{{post.title}}</a></h2>
  </div>
  <div class="content-header">
    <p>{{post.content}}</p>
  </div>
</div>
{{/each}}

<script src="/js/profile.js"></script>