<div class="row">
  <div>
    <h2 class="welcome" >Welcome, <strong>{{username}}</strong>!</h2>
  </div>
  <div>
    <i class="fas fa-plus fa-2x add-post"></i>    
  </div>
</div>

<div>
  <h3>Create a New Post:</h3>
</div>

<div class="posts-container">
  <div class="post-header">
    <h2>New Post</h2>
  </div>
    <form class="form new-post-form">
        <div class="form-group">
          <label for="post-name"></label>
          <input class="form-input" type="text" id="post-name" name="post-name" placeholder="Post Title" />
        </div>
        <div class="form-group">
          <label for="post-cont"></label>
          <textarea class="form-input" id="post-cont" name="post-cont" placeholder="Post Content"></textarea>
        </div>
        <div>
          <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </form>          
</div>

<script src="/js/profile.js"></script>